<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorCustom</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_style" parent="Widget.AppCompat.Button">

        <item name="android:textSize">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="white_text_style" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>

    </style>

    <style name="black_text_style" parent="Widget.AppCompat.TextView">

        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>

    </style>

    <style name="style_input_text_layout" parent="Widget.Design.TextInputLayout">

        <item name="android:textColorHint">@color/white</item>
        <item name="hintTextAppearance">@style/hint_text</item>
        <item name="errorTextAppearance">@style/hint_error</item>
       
    </style>

    <style name="hint_error" parent="TextAppearance.AppCompat">

        <item name="android:textSize">12dp</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:textColor">@color/colorError</item>

    </style>

    <style name="hint_text" parent="TextAppearance.AppCompat">

        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>

    </style>


    <style name="input_email" parent="Widget.AppCompat.EditText">

        <item name="android:maxLength">10</item>
        <item name="android:textSize">15dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:hint">@string/hint_email_login</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:inputType">textEmailAddress|textVisiblePassword</item>

    </style>

    <style name="input_password" parent="Widget.AppCompat.EditText">

        <item name="android:maxLength">12</item>
        <item name="android:textSize">15dp</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:hint">@string/password_field</item>
        <item name="android:background">@drawable/shape_background</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>

    </style>

    <style name="spinner_style" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">15dp</item>

    </style>
    <style name="spinner_theme" parent="android:Widget.Spinner">
        <item name="android:drawableRight">@drawable/icon_drop_down</item>
        <item name="android:fontFamily">@font/ubuntu_m</item>
        <item name="android:text">@string/text_role</item>
    </style>





</resources>
